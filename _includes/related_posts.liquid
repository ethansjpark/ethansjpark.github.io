<!-- Next & Previous Buttons -->
<div class="post-navigation mt-6 flex justify-between items-center">  
  {% if page.next %}
    <a href="{{ page.next.url | relative_url }}" class="btn btn-primary">Previous:&rarr;</a>
  {% endif %}

  {% if page.previous %}
    <a href="{{ page.previous.url | relative_url }}" class="btn btn-primary">&larr; Next</a>
  {% endif %}
</div>

<style>
  /* Ensure the container spans full width */
  .post-navigation {
      display: flex;
      align-items: center;
      width: 100%;
  }

  /* Styling for buttons */
  .prev-button, .next-button {
      padding: 12px 20px;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
      text-decoration: none;
      color: white;
  }

  /* Positioning: Keep "Next" on the left and "Previous" on the right */
  .next-button {
      margin-right: auto; /* Pushes next to the left */
  }

  .prev-button {
      margin-left: auto; /* Pushes previous to the right */
  }

  /* Color styling based on theme */
  @media (prefers-color-scheme: light) {
      .prev-button, .next-button {
          background-color: #fc8a17; /* Light mode */
      }

      .prev-button:hover, .next-button:hover {
          background-color: #e57a14; /* Darker shade for hover */
      }
  }

  @media (prefers-color-scheme: dark) {
      .prev-button, .next-button {
          background-color: #00369f; /* Dark mode */
      }

      .prev-button:hover, .next-button:hover {
          background-color: #002a7f; /* Darker shade for hover */
      }
  }
</style>